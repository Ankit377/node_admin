<%- contentFor('HeaderCss') %> <%- contentFor('title') %> Form Elements <%-
contentFor('breadcrumb') %>
<link href="public/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
<link href="public/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
<link href="public/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<link href="public/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />


<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Add Products</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">Veltrix</a>
            </li>
            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
            <li class="breadcrumb-item active"></li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Manage Promo Codes</h4>
                <hr>
                <form action="/add-promo-code" method="POST">
                    <div class="form-group row">
                        <label for="promo-code" class="col-sm-2 col-form-label">Promo Code</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Promo Code" name="promocode" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="message" class="col-sm-2 col-form-label">Message</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Message" name="message" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="datepickerautoclose" class="col-sm-2 col-form-label">Start Date</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="datepickerautoclose" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="datepickerautocloseend" class="col-sm-2 col-form-label">End Date</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="mm/dd/yyyy"
                                id="datepickerautocloseend" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="no-of-users" class="col-sm-2 col-form-label">No. of users</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="No. of users" name="noofusers" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="min-order-amt" class="col-sm-2 col-form-label">Minimum order amount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Minimum order amount"
                                name="minorderamt" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="discount" class="col-sm-2 col-form-label">Discount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Discount" name="discount" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="discount type" class="col-sm-2 col-form-label">Discount Type</label>
                        <div class="col-sm-10">
                            <select class="form-control">
                                <option>Percentage</option>
                                <option>Amount</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="max-discount" class="col-sm-2 col-form-label">Max. Discount Amount</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" placeholder="Max. Discount Amount"
                                name="maxdiscount" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="repeat" class="col-sm-2 col-form-label">Repeate Usage</label>
                        <div class="col-sm-10">
                            <select class="form-control">
                                <option>Allowed</option>
                                <option>Not Allowed</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="status" class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-10">
                            <select class="form-control">
                                <option>Active</option>
                                <option>Deactive</option>
                            </select>
                        </div>
                    </div>
                    <hr>

                    <button type="submit" class="btn btn-primary waves-effect wavws-light" name="addpromobtn"> Add
                    </button>
                </form>

            </div>
        </div>
        <div class="card">
            <div class="card-body">

                <% if (data != null) { %>

                <table class="table table-hover mb-0">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Promo Code</th>
                            <th>Message</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>No. Of Users</th>
                            <th>Minimum Order Amount</th>
                            <th>Maximum Discount Amount</th>
                            <th>Discount</th>
                            <th>Discount Type</th>
                            <th>Status</th>
                            <th>Date Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(result => { %>

                        <tr>
                            <td>1</td>
                            <td><%= result.promo_code %></td>
                            <td><%= result.message %></td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>null</td>
                            <td>Action</td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                
                <% } %>
            </div>

        </div>
    </div>
</div>
<!-- end col -->
</div>
<!-- end row -->

