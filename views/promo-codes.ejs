<%- contentFor('body') %>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Promo Codes</h4>
        <hr>
        <div class="form-group row">
            <label for="promo-code" class="col-sm-2 col-form-label"
              >Promo Code</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Promo Code"
                id="promo-code"
              />
            </div>
          </div>
          <div class="form-group row">
            <label for="message" class="col-sm-2 col-form-label"
              >Message</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Message"
                id="message"
              />
            </div>
          </div>

          <div class="form-group row">
            <label for="message" class="col-sm-2 col-form-label"
              >Start Date</label
            >
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="datepicker-autoclose"/>
            </div>
          </div>

          <div class="form-group row">
            <label for="message" class="col-sm-2 col-form-label"
              >End Date</label
            >
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="datepicker-autoclose"/>
            </div>
          </div>

          <div class="form-group row">
            <label for="no-of-users" class="col-sm-2 col-form-label"
              >No. of users</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="No. of users"
                id="no-of-users"
              />
            </div>
          </div>

          <div class="form-group row">
            <label for="min-order-amt" class="col-sm-2 col-form-label"
              >Minimum order amount</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Minimum order amount"
                id="min-order-amt"
              />
            </div>
          </div>

          <div class="form-group row">
            <label for="discount" class="col-sm-2 col-form-label"
              >Discount</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Discount"
                id="discount"
              />
            </div>
          </div>

          <div class="form-group row">
            <label for="discount type" class="col-sm-2 col-form-label"
              >Discount Type</label
            >
            <div class="col-sm-10">
              <select class="form-control">
                  <option>Percentage</option>
                  <option>Amount</option>
              </select>
            </div>
          </div>

          <div class="form-group row">
            <label for="max-discount" class="col-sm-2 col-form-label"
              >Max. Discount Amount</label
            >
            <div class="col-sm-10">
              <input
                class="form-control"
                type="text"
                placeholder="Max. Discount Amount"
                id="max-discount"
              />
            </div>
          </div>

          <div class="form-group row">
            <label for="repeat" class="col-sm-2 col-form-label"
              >Repeate Usage</label
            >
            <div class="col-sm-10">
              <select class="form-control">
                  <option>Allowed</option>
                  <option>Not Allowed</option>
              </select>
            </div>
          </div>

          <div class="form-group row">
            <label for="status" class="col-sm-2 col-form-label"
              >Status</label
            >
            <div class="col-sm-10">
              <select class="form-control">
                  <option>Active</option>
                  <option>Deactive</option>
              </select>
            </div>
          </div>
          <hr>
        <form action="/add-promo-code" method="POST">
            <button
                type="submit"
                class="btn btn-primary waves-effect wavws-light"
                id="add-promo-btn"
            > Add </button>
        </form>

        </div>
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<!-- end row -->

